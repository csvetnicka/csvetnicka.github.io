<% include header %>
<div class="container-fluid">
<div class="row">
<div class="col-md-4">
</div>
<div class="col-md-4">
<form class="pure-form pure-form-stacked" action="http://localhost:3000/courseguide" method="get">
    <fieldset>
        <legend>Course Guide</legend>

        <label for="term">Term</label>
        <select name="term" id="term-input">
        	<option> Fall 2016 </option>
        	<option> Winter 2017 </option>
        </select>

        <label for="school">School</label>
        <select name="school"id="school-input">
        	<option> College of Engineering </option>
            <option> Literature, Science & the Arts </option>
            <option> School of Education </option>
            <option> Ross School of Business </option>
        </select>

        <label for="department">Department</label>
        <select name="department" placeholder="Select School" id="department-input">
           
           
        </select>
        <label for="course"> Course </label>
        <input name="course" id="course-input" type="text" placeholder="EECS 281" />


        <button type="submit" class="pure-button pure-button-primary" id="courseguide-submit">Search</button>
    </fieldset>
</form>
</div>
</div>
</div>


